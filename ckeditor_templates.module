<?php

/**
 * @file
 * Contains ckeditor_templates.module..
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function ckeditor_templates_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the ckeditor_templates module.
    case 'help.page.ckeditor_templates':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('CKEditor Content Templates plugin for Drupal 8') . '</p>';
      return $output;

    default:
  }
}
